<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lab2.GetPostActivity"
    android:orientation="vertical"
    android:padding="24dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Learn HTTP Using GET"
        android:gravity="center"/>
    <EditText
        android:id="@+id/ed_get_w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Width"/>
    <EditText
        android:id="@+id/ed_get_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Height"/>
    <Button
        android:id="@+id/btn_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"/>
    <TextView
        android:id="@+id/tv_get_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:layout_marginTop="8dp"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Learn HTTP Using POST"
        android:gravity="center"
        android:layout_marginTop="12dp"/>
    <EditText
        android:id="@+id/ed_post_w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Width"/>
    <EditText
        android:id="@+id/ed_post_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Height"/>
    <Button
        android:id="@+id/btn_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"/>
    <TextView
        android:id="@+id/tv_post_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:layout_marginTop="8dp"
        android:textSize="18dp"/>
</LinearLayout>